#include "common/include.h"

void FPushSeek(u64 pos)
{
    FPush();
    FSeek(pos);
}

u32 MakeFourCCLE( string str )
{
    return (u32)str[0] | (u32)str[1] << 8 | (u32)str[2] << 16 | (u32)str[3] << 24; 
}

