    local bool isBigEndian = IsBigEndian();
    LittleEndian();

    local u64 startPosition = FTell();
    /* 00 */ u32 Signature;
    /* 04 */ u32 Size; 
    local u64 endPosition = startPosition + 8 + Size;

    if ( isBigEndian ) BigEndian();
} TNNChunkHeader;


